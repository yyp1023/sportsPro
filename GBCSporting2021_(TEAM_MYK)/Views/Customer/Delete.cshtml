@model Customer
@{
    ViewBag.Title = "Delete Customer";
}
<div class="container pb-10">
    <div class="row align-center justify-content-center text-center py-5">
        <div class="col col-12 col-md-8">
            <h2 class="text-dark">@ViewBag.Title</h2>
            <p class="lead font-weight-lighter text-muted">Are you sure you want to delete "@ViewBag.Customer.Firstname @ViewBag.Customer.Lastname"</p>    
            <form asp-action="Delete" method="post">
                <div>
                    <button class="btn btn-danger" type="submit">@ViewBag.Title</button>
                    <a asp-controller="Customer" asp-action="Cancel" class="btn btn-">No</a>
                </div>
            </form>
        </div>
    </div>
</div>