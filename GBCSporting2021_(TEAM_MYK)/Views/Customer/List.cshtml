@model IEnumerable<Customer>
@{
    ViewBag.Title = "Customer Manager - SportsPro";
    ViewBag.Action = "customer";
}
<h1>@ViewBag.order_id</h1>
<div class="container pb-10">
    <div class="row align-center justify-content-center text-center py-5">
        <h3 class="bg-success">@TempData["message"]</h3>
        <div class="col col-12 col-md-8">
            <h2 class="text-dark">@ViewBag.Title</h2>
            <p class="lead font-weight-lighter text-muted">Managing customer you can do everything here!</p>
        </div>
    </div>
    <div class="input-group mb-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">City</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Customer customer in Model)
                {
                    <tr>
                        <td>@customer.Firstname @customer.Lastname</td>
                        <td>@customer.Email</td>
                        <td>@customer.City</td>
                        <td>
                            <a class="btn btn-success" asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerId" asp-route-slug="@customer.Slug">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerId" asp-route-slug="@customer.Slug">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-grid gap-2 d-md-block">
            <a asp-controller="Customer" asp-action="Add">
                <button class="btn btn-primary" type="button">Add Customer</button>
            </a>
        </div>
    </div>
</div>