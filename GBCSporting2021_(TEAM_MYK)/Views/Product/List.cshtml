@model IEnumerable<Product>
@{
    ViewBag.Title = "Product Manager - SportsPro";
    ViewBag.Action = "product";
}

<div class="container pb-10">
    <div class="row align-center justify-content-center text-center py-5">
        <h3 class="bg-success">@TempData["message"]</h3>
        <div class="col col-12 col-md-8">
            <h2 class="text-dark">@ViewBag.Title</h2>
            <p class="lead font-weight-lighter text-muted">Managing customer you can do everything here!</p>
        </div>
    </div>
    <div class="input-group mb-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Code</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Release Date</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model)
                {
                    <tr>
                        <td>@product.Code</td>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>@String.Format("{0:yyyy/MM/dd}", product.ReleaseDate)</td>
                        <td>
                            <a class="btn btn-success" asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" asp-route-slug="@product.Slug">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId" asp-route-slug="@product.Slug">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-grid gap-2 d-md-block">
            <a asp-controller="Product" asp-action="Add">
                <button class="btn btn-primary" type="button">Add Product</button>
            </a>
        </div>
    </div>
</div>